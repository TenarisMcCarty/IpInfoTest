<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restricted GitHub Page</title>
    <script>
        const geoApiUrl = 'https://ipinfo.io/json?token=a707f0cce5fc3b'; // Use your token

        fetch(geoApiUrl)
            .then(response => response.json())
            .then(data => {
                console.log('Visitor location data:', data);  // Debugging: view response in console

                const allowedZip = '77001';  // ZIP code to allow access
                const allowedCountry = 'US';  // Optional: restrict to US as well

                // Check if visitor's country and ZIP code match the allowed ones
                if (data.country !== allowedCountry || data.postal !== allowedZip) {
                    alert('Access Denied: Your location is not allowed.');
                    document.body.innerHTML = '<h1>403 - Forbidden</h1><p>Access restricted based on your location.</p>';
                }
            })
            .catch(error => {
                console.error('Error fetching location:', error);
                document.body.innerHTML = '<h1>Error</h1><p>Could not verify location.</p>';
            });
    </script>
</head>
<body>
    <h1>Welcome to My Website</h1>
    <p>This content is accessible only from a specific ZIP code.</p>
</body>
</html>
